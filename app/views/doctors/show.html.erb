<h1><%= @doctor.name %></h1>
<% @doctor.appointments.each do |a| %>
    <% @docs_patient = @doctor.patients.find(a.patient_id) %>
    <%= link_to @docs_patient.name, patient_path(@docs_patient) %>
    <%= link_to a.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(a) %>
<% end %>